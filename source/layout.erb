<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Blog Title<%= ' - ' + current_article.title unless current_article.nil? %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>

    <%= stylesheet_link_tag :site %>
    <%= javascript_include_tag :all %>
  </head>
  <body>
    <header class='header'>
      <h1>Folioscope</h1>
      <h2>We love simple</h2>

      <%= partial 'service-icons' %>
    </header>

    <div class='main-container'>
      <div class='articles'>
        <%= yield %>
      </div>

      <div class='asides'>
        <aside class='aside'>
          <h2>Recent Articles</h2>
          <ol class='recent-articles'>
            <% blog.articles[0...10].each do |article| %>
              <li class='recent-article'>
                <p class='recent-article-date'><%= article.date.strftime('%Y-%m-%d') %></p>
                <p class='recent-article-title'><%= link_to article.title, article %></p>
              </li>
            <% end %> </ol>
        </aside>

        <aside class='aside'>
          <h2>Tags</h2>
          <ol class='category-items'>
            <% blog.tags.each do |tag, articles| %>
              <li class='articles-item'><%= link_to "#{tag} (#{articles.size})", tag_path(tag) %></li>
            <% end %>
          </ol>
        </aside>

        <aside class='aside'>
          <h2>By Year</h2>
          <ol class='category-items'>
            <% blog.articles.group_by {|a| a.date.year }.each do |year, articles| %>
              <li class='articles-item'><%= link_to "#{year} (#{articles.size})", blog_year_path(year) %></li>
            <% end %>
          </ol>
        </aside>
      </div>
    </div>

    <footer class='footer'>
      <%= partial 'service-icons' %>
    </footer>
  </body>
</html>
